<view class="videoContainer">
    <!-- 头部区域 -->
    <view class="header">
        <image src="/static/images/video/video.jpg" alt="" />
        <view class="search">搜索商品</view>
        <image src="/static/images/logo.png" />
    </view>
    <!-- 导航区域 -->
    <scroll-view scroll-x enable-flex class="navScroll">
        <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id">
            <view class="navContent {{navId === item.id?'active':''}}" bindtap="changeNav" id="{{item.id}}">
                {{item.name}}
            </view>
        </view>
    </scroll-view>
    <!-- 视频列表区域 -->
    <scroll-view scroll-y class="videoScroll">
        <view class="videoItem" wx:for="{{videoList}}" wx:key="index">
            <video src="{{item.data.urlInfo.url}}" />
        </view>
    </scroll-view>
</view>
/* pages/songDetail/songDetail.wxss */
.songDetailContainer {
  position: relative;
  height: 100%;
  background: linear-gradient(to left top, rgba(77, 76, 90, .6), rgba(48, 75, 103));
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 底座 */
.shadowCircle {
  position: relative;
  z-index: 3;
  margin: 10rpx 0;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .2);
}

.circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

}

.innerCircle {
  width: 17rpx;
  height: 17rpx;
  border-radius: 50%;
  background-color: rgb(229, 229, 229);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 摇杆 */
.needle {
  position: relative;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  /* border: 1px solid red; */
  z-index: 2;
  transform: rotate(-20deg);
  transform-origin: 19% -3%;
  transition: transform 1s;
}

.needleRotate {
  transform: rotate(0deg);
}

/* 磁盘 */
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
  /* border: 1px solid pink; */
}

.discAnimation {
  animation: disc 15s linear infinite;
  animation-delay: 0.3s;
}

/* 
  @keyframes:设置动画帧
    1） from to
      - 适用于简单的动画，只有起始帧和结束帧
    2) 百分比
      - 多用于复杂的动画，动画不止两帧
 */

@keyframes disc {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}


.disc {
  width: 100%;
  height: 100%;
  /* z-index: 1; */
}

.musicImg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 65%;
  height: 65%;
  border-radius: 50%;
}

/* 底部 */
.footer {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.operation,
.musicControl {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  /* border: 1rpx solid red; */
  /* padding: 20rpx 0; */
  height: 90rpx;
}

.operation text,
.musicControl text {
  font-size: 40rpx;
  color: rgba(255, 255, 255, .7);

}

.musicControl .big {
  font-size: 80rpx;
}



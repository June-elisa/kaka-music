/* pages/index/index.wxss */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 20rpx;
}


/* 推荐内容区 */
.recommendScroll {
  display: flex;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;

  /* 多行文本溢出隐藏 省略号代替 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
  font-size: 26rpx;
}
.topItem {
  width: 96%;
  background-color: #fbfbfb;
  display: flex;
  flex-direction: row;
}
.topItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 20rpx;
  height: 200rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .desc {
  display: inline-block;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 25rpx;
}